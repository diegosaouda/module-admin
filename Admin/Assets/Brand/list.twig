<div data-ng-controller="Rbs_Brand_Brand_ListController">
	<page-header title="{{ i18nAttr('m.rbs.brand.document.brand-list', ['ucf']) }}"></page-header>
	<search-filters model="Rbs_Brand_Brand" filter-query="query" text-search="textSearch"></search-filters>

	<div>
		<a href ng-href="(= 'Rbs_Brand_Brand' | documentURL:'new' =)">{{ i18n('m.rbs.brand.document.brand-create', ['ucf']) }}</a>
	</div>

	<rbs-document-list data-dlid="DLRbsBrandBrand"
	               model="Rbs_Brand_Brand"
	               publishable="true"
	               filter-query="query">
		<column name="visual" thumbnail="XS" thumbnail-path="doc.visual.id"></column>
		<column name="label" primary="true"></column>

		<preview style="min-height: 200px">
			<img rbs-storage-image="doc.visual.id" rbs-image-container-colorizer="td.preview" thumbnail="L" class="absolute-top-left"/>
			<div style="margin-left: 290px;">
				<h4>(= doc.label =)</h4>
				<dl class="dl-horizontal">
					<dt>{{ i18n('m.rbs.brand.document.brand.websiteurl', ['ucf','lbl']) }}</dt>
					<dd ng-if="doc.websiteUrl"><a href ng-href="(= doc.websiteUrl =)" target="_blank">(= doc.websiteUrl =)</a></dd>
					<dd ng-if="! doc.websiteUrl">-</dd>
					<dt>{{ i18n('m.rbs.tag.tags', ['ucf','lbl']) }}</dt>
					<dd ng-if="doc.getTags().length"><span rbs-tag="tag" ng-repeat="tag in doc.getTags()"></span></dd>
					<dd ng-if="!doc.getTags().length">{{ i18n('m.rbs.tag.no-tags', ['ucf']) }}</dd>
				</dl>
				<p ng-bind-html="doc.description.h"></p>
			</div>
		</preview>


		<column name="websiteUrl"></column>
	</rbs-document-list>
</div>