	<div class="nav-list">
		<a class="pull-right close" href="javascript:;" ng-click="close()" style="line-height: 26px;"  title="{{ i18n('m.rbs.admin.menu.close', ['ucf']) }}">&times;</a>
		<form class="form-search" ng-submit="go()" novalidate>
			<div class="input-append input-block">
				<input placeholder="{{ i18nAttr('m.rbs.admin.menu.search', ['ucf', 'etc']) }}" type="text" style="width:135px;" class="search-query" ng-model="filterModules" ng-keydown="filterKeydown($event)"/>
				<button title="{{ i18nAttr('m.rbs.admin.menu.clear-search', ['ucf']) }}" ng-click="clear()" type="button" class="btn"><i class="icon-remove-circle"></i></button>
			</div>
		</form>
	</div>

	<div class="nav-list" ng-if="filterModules == 'chucknorris'" ng-animate="'opacity-animation'" style="text-align: center">
		<a target="_blank" href="http://chucknorrisfacts.fr/"><img class="img-polaroid" src="Rbs/Admin/img/chuck.jpg"/></a>
	</div>
	<div ng-if="filterModules != 'chucknorris'">
		<ul class="nav nav-list">
			<li><a ng-click="close()" href="./"><i class="icon-tasks"></i> {{ i18nAttr('m.rbs.admin.menu.dashboard', ['ucf']) }}</a></li>
		</ul>

		<ul class="nav nav-list" ng-repeat="s in menu.sections | orderBy:'label'">
			<li class="divider"></li>
			<li class="nav-header">(= s.label =)</li>
			<li ng-animate="'menu-animate'" ng-repeat="m in menu.entries | filter:{'section':s.code} | filter:filterModules | orderBy:'label'">
				<a ng-if="! editMode" href ng-click="close()" ng-href="(= m.url =)">(= m.label =)</a>
				<a ng-if="editMode" href="javascript:;" ng-click="m.pinned = true"><i ng-if="! m.pinned" class="pull-right icon-pushpin"></i>(= m.label =)</a>
			</li>
		</ul>

		<ul class="nav nav-list" ng-if="hasOtherModules">
			<li class="divider"></li>
			<li class="nav-header">{{ i18n('m.rbs.admin.menu.other-modules', ['ucf']) }}</li>
			<li ng-animate="'menu-animate'" ng-repeat="m in menu.entries | filter:{'section':'other'} | filter:filterModules |  orderBy:'label'">
				<a ng-if="! editMode" href ng-click="close()" ng-href="(= m.url =)">(= m.label =)</a>
				<a ng-if="editMode" href="javascript:;" ng-click="m.pinned = true"><i ng-if="! m.pinned" class="pull-right icon-pushpin"></i>(= m.label =)</a>
			</li>
		</ul>
	</div>

	<div class="visible-desktop">
		<ul class="nav nav-list">
			<li class="divider"></li>
		</ul>
		<div class="menu-help">
			{{ i18n('m.rbs.admin.menu.help-bottom', ['ucf']) }}
		</div>
	</div>

</div>