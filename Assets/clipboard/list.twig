<div data-ng-controller="Rbs_Admin_ClipboardController">

	<div class="page-header">
		<h2>{{ i18n('m.rbs.admin.admin.clipboard_change', ['ucf']) }}</h2>
	</div>

	<rbs-document-list data-dlid="RbsAdminClipboardList"
	                   extend="clipboardList"
	                   collection="clipboardItems">

		<column name="path" thumbnail="XS" thumbnail-path="doc" label="<i class='icon-picture'></i>"></column>
		<column name="label" label="Document" primary="true"></column>

		<action name="removeFromClipboard" label="{{ i18nAttr('m.rbs.admin.admin.remove_from_clipboard', ['ucf']) }}" selection="+"></action>
		<action name="clearClipboard" label="{{ i18nAttr('m.rbs.admin.admin.clean_clipboard', ['ucf']) }}"></action>

		<quick-actions>
			[action delete] || [action removeFromClipboard]
		</quick-actions>

	</rbs-document-list>

</div>
