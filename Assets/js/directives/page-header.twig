<div class="page-header">
	<div class="clearfix">
		<div class="pull-right" ng-if="document !== null && ! document.isNew() && (document.publicationStatus !== undefined || document.hasCorrection())">
			<a href="javascript:;" ng-href="(= document | rbsURL:'workflow' =)" class="btn" ng-class="{true: 'btn-success', false: 'btn-default'}[document.publicationStatus=='PUBLISHABLE']">
				<rbs-status class="small" ng-model="document"></rbs-status>
				<span ng-if="document.hasCorrection()">
					{{ i18n('m.rbs.admin.admin.correction', ['ucf']) }}
					<span class="badge">(= document.META$.correction.propertiesNames.length =)</span>
				</span>
				<span ng-if="! document.hasCorrection()">
					(= document.publicationStatus | rbsStatusLabel =)
				</span>
				<i class="icon-circle-arrow-right"></i>
			</a>
		</div>
		<h2>
			(= document.label || title =)
			<small>(=subTitle=)</small>
		</h2>
	</div>

	<div ng-show="document.META$.localCopy && localCopyMerged" class="alert alert-warning">
		<button type="button" class="close" ng-click="localCopyMerged=false">&times;</button>
		<h4>{{ i18n('m.rbs.admin.admin.document_modify_without_save_title') }}</h4>
		{{ i18n('m.rbs.admin.admin.document_modify_without_save_content') }}
	</div>

	<div class="embedded-content"></div>
</div>
