<div class="page-header">

	<form data-ng-show="! document" class="form-search pull-right" data-ng-submit="textSearch = search || '...'">
		<div class="input-append">
			<input type="text" class="input-medium search-query" placeholder="{{ i18nAttr('m.rbs.admin.search', ['ucf', 'etc']) }}" data-ng-model="search"/>
			<button type="submit" class="btn" title="{{ i18nAttr('m.rbs.admin.search', ['ucf']) }}">
				<i class="icon-search"></i>
			</button>
		</div>
	</form>

	<h2>
		<div class="btn-toolbar pull-right">
			<button type="button" class="btn btn-small btn-success"
				data-role="view-correction"
				ng-if="document.hasCorrection()"
				title="Date de la correction : (=document.meta('correction.creationDate') | date:'medium'=)"
				ng-click="openCorrectionViewer()">{{ i18n('m.rbs.admin.correction', ['ucf']) }} <span class="badge">(=document.META$.correction.propertiesNames.length=)</span></button>
		</div>

		<status data-ng-show="document && ! isCascading()" data-ng-model="document"/>
		(= document.label || currentFolder.label || title =)
		<small>(=subTitle=)</small>
	</h2>

	<div class="embedded-content"></div>

	<div ng-if="document.hasCorrection()" class="alert icon alert-success">
		<i class="icon-info-sign"></i>
		<h4>
			{{ i18n('m.rbs.admin.this-document-has-a-correction-on', ['ucf']) }}
			<span ng-pluralize count="document.META$.correction.propertiesNames.length" when="{'one': 'une propriété', 'other': '{} propriétés'}"></span>.
		</h4>
		{{ i18n('m.rbs.admin.correction-editor-explanation', ['ucf']) }}
	</div>

</div>
