<div class="btn-group btn-block" style="margin-bottom: 10px">
	<button type="button" class="btn dropdown-toggle btn-block" data-toggle="dropdown" ng-class="{true: 'btn-warning', false: 'btn-info'}[missingTranslations]">
		(= rbsI18nItems.length | number =) {{ i18n('m.rbs.admin.adminjs.translations') }} ((= currentLCID =)) <span class="caret"></span>
	</button>
	<ul class="dropdown-menu pull-right" role="menu">
		<li ng-repeat="item in rbsI18nItems"><a rbs-url-match-class="" href="javascript:;" ng-href="(= item.url =)" class="(= item.cssClass =)">
				<span ng-if="item.badge" class="badge pull-right" ng-bind="item/badge"></span>
				<i ng-if="item.icon" class="(= item.icon =)"></i> <span ng-bind-html="item.text"></span>
			</a></li>
	</ul>
</div>