<div ng-show="documents.length > 0">
	<token-list items="documents" rows="true"></token-list>
</div>

<p class="form-control form-control-static text-muted" style="margin-bottom: 0;" ng-show="! documents || documents.length == 0">{{ i18n('m.rbs.admin.admin.picker_no_element', ['ucf']) }}</p>

<div class="btn-toolbar">
	<div class="btn-group">
		<button
			type="button"
			class="btn btn-default btn-xs"
			ng-click="openSelector()"
			title="{{ i18nAttr('m.rbs.admin.admin.picker_selector-tooltip', ['ucf', 'etc']) }}"><i class="icon-arrow-down"></i><span ng-if="showButtonsLabel"> {{ i18n('m.rbs.admin.admin.picker_selector') }}</span></button>
		<button
			type="button"
			class="btn btn-default btn-xs"
			ng-click="beginSelectSession()"
			ng-show="acceptedModel && allowInPlaceSelection"
			title="{{ i18nAttr('m.rbs.admin.admin.picker_in_place-tooltip', ['ucf', 'etc']) }}"><i class="icon-external-link"></i><span ng-if="showButtonsLabel"> {{ i18n('m.rbs.admin.admin.picker_in_place', ['etc']) }}</span></button>
		<button
			type="button"
			class="btn btn-default btn-xs"
			ng-click="getFromClipboard()"
			ng-disabled="clipboardValues.length == 0"
			title="{{ i18nAttr('m.rbs.admin.admin.picker_clipboard-tooltip', ['ucf']) }}"><i ng-class="{ 'icon-bookmark': clipboardValues.length > 0, 'icon-bookmark-empty': clipboardValues.length == 0 }"></i><span ng-if="showButtonsLabel"> {{ i18n('m.rbs.admin.admin.picker_clipboard') }}</span></button>
	</div>
	<button
		type="button"
		class="btn btn-default btn-xs pull-right"
		ng-click="clear()"
		ng-disabled="isEmpty()"
		title="{{ i18nAttr('m.rbs.admin.forms.picker-delete-selection-tooltip', ['ucf']) }}"><i class="icon-eraser"></i><span ng-if="showButtonsLabel"> {{ i18n('m.rbs.admin.admin.picker_clear') }}</span></button>
	<button
		ng-show="allowCreation"
		type="button"
		class="btn btn-default btn-xs"
		ng-click="createDocument()"
		title="{{ i18nAttr('m.rbs.admin.admin.picker_create-tooltip', ['ucf']) }}"><i class="icon-plus"></i><span ng-if="showButtonsLabel"> {{ i18n('m.rbs.admin.admin.picker_create') }}</span></button>
</div>

<div class="document-picker-embedded" style="display: none;">
	<header class="clearfix">
		<button ng-click="closeSelector()" type="button" class="close pull-right" style="margin-left: 10px; margin-top: 4px;">&times;</button>
		<h4>(= selectorTitle =)</h4>
	</header>

	<div class="well well-small" ng-show="! acceptedModel">
		<div class="row">
			<label class="col-lg-3 control-label" for="DpSelectModel">{{ i18n('m.rbs.admin.admin.picker_choose_model_to_select', ['ucf']) }}</label>
			<div class="col-lg-9">
				<rbs-model-selector filter="(= selectModel =)" class="form-control" id="DpSelectModel" model="dp.selectedModel"></rbs-model-selector>
			</div>
		</div>
	</div>

	<div>
		{{ i18n('m.rbs.admin.forms.picker-help-filter', [], {'htmlOpen':'<a href="javascript:;" ng-click="beginSelectSession()">', 'htmlClose':'</a>'}) }}
	</div>

	<div data-role="picker-contents"></div>

	<hr />
	<div class="btn-toolbar clearfix">
		<span class="pull-right">
			<div class="btn-group">
				<button ng-click="appendSelected()" type="button" class="btn btn-default"><i class="icon-arrow-down"></i> {{ i18n('m.rbs.admin.admin.picker_add_to_end', ['ucf']) }}</button>
				<button ng-click="prependSelected()" type="button" class="btn btn-default"><i class="icon-arrow-up"></i> {{ i18n('m.rbs.admin.admin.picker_add_to_begin', ['ucf']) }}</button>
				<button ng-click="replaceWithSelected()" type="button" class="btn btn-default"><i class="icon-arrow-right"></i> {{ i18n('m.rbs.admin.admin.replace', ['ucf']) }}</button>
			</div>
			<div class="btn-group">
				<button ng-click="closeSelector()" type="button" class="btn btn-default">{{ i18n('m.rbs.admin.admin.close', ['ucf']) }}</button>
			</div>
		</span>
		<button ng-click="selectAndClose()" type="button" class="btn btn-success"><i class="icon-ok"></i> {{ i18n('m.rbs.admin.admin.select_and_close', ['ucf']) }}</button>
	</div>
</div>