<div data-ng-show="documents.length > 0">
	<token-list items="documents" class="rows"></token-list>
</div>

<div class="muted" data-ng-show="! documents || documents.length == 0">{{ i18n('m.rbs.admin.forms.picker-no-element', ['ucf']) }}</div>

<div class="btn-toolbar">
	<button
		ng-show="allowCreation"
		type="button"
		class="btn"
		data-ng-click="createDocument()"
		title="{{ i18nAttr('m.rbs.admin.forms.picker-create-tooltip', ['ucf']) }}"><i class="icon-plus"></i></button>
	<button
		type="button"
		class="btn"
		data-ng-click="clear()"
		data-ng-disabled="isEmpty()"
		title="{{ i18nAttr('m.rbs.admin.forms.picker-delete-selection-tooltip', ['ucf']) }}"><i class="icon-remove"></i></button>

	<div class="btn-group">
		<button
			type="button"
			class="btn"
			data-ng-click="openSelector()"
			title="{{ i18nAttr('m.rbs.admin.forms.picker-choose-tooltip', ['ucf', 'etc']) }}">{{ i18n('m.rbs.admin.forms.picker-choose', ['ucf', 'etc']) }}</button>
		<button
			type="button"
			class="btn"
			data-ng-click="getFromClipboard()"
			data-ng-disabled="clipboardValues.length == 0"
			title="{{ i18nAttr('m.rbs.admin.forms.picker-take-from-clipboard-tooltip', ['ucf']) }}"><i ng-class="{ 'icon-bookmark': clipboardValues.length > 0, 'icon-bookmark-empty': clipboardValues.length == 0 }"></i></button>
	</div>
</div>

<div class="document-picker-embedded" style="display: none;">
	<header class="clearfix">
		<form class="form-search pull-right" data-ng-submit="textSearch = search || '...'">
			<div class="input-append">
				<!--TODO localization-->
				<input type="text" class="input-medium search-query" placeholder="{{ i18nAttr('m.rbs.admin.search', ['ucf', 'etc']) }}" data-ng-model="search"/>
				<button type="submit" class="btn" title="Rechercher">
					<i class="icon-search"></i>
				</button>
			</div>
			<button ng-click="closeSelector()" type="button" class="close" style="margin-left: 10px; margin-top: 4px;">&times;</button>
		</form>
		<h3>(=selectorTitle=)</h3>
	</header>

	<search-filters model="(= acceptedModel =)" filter-query="query" text-search="textSearch"></search-filters>

	<div data-role="picker-contents"></div>

	<div class="btn-toolbar clearfix">
		<button ng-click="closeSelector()" type="button" class="btn btn-success pull-right">Fermer</button>
		<button ng-click="appendSelected()" type="button" class="btn"><i class="icon-arrow-down"></i> Ajouter à la fin</button>
		<button ng-click="prependSelected()" type="button" class="btn"><i class="icon-arrow-up"></i> Ajouter au début</button>
		<button ng-click="replaceWithSelected()" type="button" class="btn"><i class="icon-arrow-right"></i> Remplacer</button>
	</div>
</div>