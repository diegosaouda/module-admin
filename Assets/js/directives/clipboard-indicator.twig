<li class="dropdown" ng-class="{'on': values.length > 0}" title="{{ i18nAttr('m.rbs.admin.admin.clipboard', ['ucf']) }}">
	<a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown">
		<i ng-class="{ true: 'icon-bookmark', false: 'icon-bookmark-empty' }[values.length > 0]"></i>
		(= values.length =)
		<span class="indicator-title">{{ i18nAttr('m.rbs.admin.admin.clipboard', ['ucf']) }}</span>
	</a>
	<ul class="dropdown-menu">
		<li class="dropdown-header">{{ i18n('m.rbs.admin.admin.clipboard' , ['ucf']) }}</li>
		<li class="divider"></li>
		<li data-ng-show="values.length > 0"><a data-ng-href="clipboard"
		                                        title="{{ i18nAttr('m.rbs.admin.admin.display_clipboard_list' , ['ucf']) }}"><i
				class="icon-eye-open"></i> {{ i18n('m.rbs.admin.admin.display' , ['ucf']) }}</a></li>
		<li data-ng-show="values.length > 0"><a href="javascript:;" data-ng-click="clear()"><i class="icon-remove"></i> {{ i18n('m.rbs.admin.admin.clear' , ['ucf']) }}</a></li>
		<li data-ng-show="values.length == 0" class="disabled"><a href="javascript:;">{{ i18n('m.rbs.admin.admin.clipboard_empty' , ['ucf']) }}</a></li>
	</ul>
</li>