<div ng-controller="Rbs_Admin_DashboardController" class="dashboard">

	<div class="small-indicators">
		<img src="Rbs/Admin/img/chuck.jpg" style="width: 62px; height: 62px;"/>
		<span>
			<i class="icon-exclamation-sign"></i>
			<div>Notifications</div>
			<div class="value">14</div>
		</span>
		<span ng-init="showTasks = false" ng-click="showTasks = ! showTasks">
			<i class="icon-tasks"></i>
			<div>Tâches</div>
			<div class="value"><i class="icon-spinner icon-spin" ng-if="! tasks"></i>(= tasks.pagination.count =)</div>
		</span>
		<span style="border-bottom: 3px solid #0088cc;">
			<i class="icon-tag"></i>
			<div>brouillon</div>
			<div class="value">38</div>
		</span>
		<span style="border-bottom: 3px solid #ff5a58;">
			<i class="icon-tag"></i>
			<div>à traduire</div>
			<div class="value">14</div>
		</span>
		<span class="settings">
			<i class="icon-cog"></i>
		</span>
	</div>

	<div ng-show="showTasks">
		<h4>Tâches en cours</h4>
		<rbs-document-list data-dlid="DLRbsDashboardTasksList"
		                   model="Rbs_Workflow_Task"
		                   collection="tasks"
		                   selectable="false"
		                   extend="taskList"
		                   on-reload="reloadTasks()"
		                   quick-actions=""
		                   actions="">
			<column name="label">
				<div class="pull-right" ng-if="doc.status=='EN'">
					<button type="button" class="btn btn-small btn-success" ng-click="extend.resolveTask(doc)"><i class="icon-ok"></i></button>
					<button type="button" class="btn btn-small btn-danger" ng-click="extend.rejectTask(doc)"><i class="icon-ban-circle"></i></button>
				</div>
				(= doc.label =)
			</column>
			<column name="taskCode"></column>
			<column name="status">
				<span class="label label-success" ng-if="doc.status=='FI'">terminé</span>
				<span class="label" ng-if="doc.status=='EN'">à exécuter</span>
			</column>
			<column name="document">
				<a href ng-href="(= doc.document | documentURL =)">(= doc.document.label =)</a>
				<i class="icon-rbs-navigate-to"></i>
			</column>
		</rbs-document-list>
	</div>

	<hr/>

	<div class="row-fluid indicators">
		<div ng-repeat="ind in indicators" class="span(= 12/indicators.length =) indicator indicator-(= ind.style =)">
			<div class="indicator-inner">
				<div class="value pull-left">(= ind.value | number =)</div>
				<div class="title">
					<div ng-bind-html-unsafe="ind.label"></div>
					<div class="message" ng-bind-html-unsafe="ind.message"></div>
				</div>
			</div>
		</div>
	</div>

	<hr/>

	<div class="row-fluid">
		<span class="span8">
			<div style="float: left; width: 50px; height: 50px; margin-right: 5px;">
				<img src="Rbs/Admin/img/user-default.png" class="img-circle" style="width: 50px; height: 50px;"/>
				<br/><small><a href="javascript:;"><i class="icon-pencil"></i> éditer</a></small>
			</div>
			<input type="text" class="social-my-status" placeholder="Sur quoi travaillez-vous ?"/>
		</span>
		<span class="span4">
			<h3>RSS 1</h3>
			Lorem ipsum...<br/>
			Bla bla bla bla...<br/>
			Lorem ipsum...<br/>
			Bla bla bla bla...<br/>
			<h3>RSS 2</h3>
			Lorem ipsum...<br/>
			Bla bla bla bla...<br/>
			<h3>RSS 3</h3>
			Bla bla bla bla...<br/>
			<h3>Twitter</h3>
		</span>
	</div>

	<div class="clearfix"></div>

</div>